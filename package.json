{
  "name": "@stlib/testing",
  "version": "1.2.1",
  "description": "Testing framework for TypeScript Node.js applications",
  "main": "stutil.ts",
  "types": "stutil.d.ts",
  "bin": {
    "stest": "./bin/run-stest.sh"
  },
  "repository": "https://github.com/stbestichhh/stlib-testing",
  "author": "Kiril Yakymchuk <stbestich@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npx tsc",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "files": [
    "bin",
    "lib",
    "utils",
    "stutil.d.ts",
    "tsconfig.json",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
